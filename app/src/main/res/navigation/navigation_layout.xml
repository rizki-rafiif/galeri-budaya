<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_layout"
    app:startDestination="@id/home_fragment">

    <fragment
        android:id="@+id/home_fragment"
        android:name="com.rizkirafiif.galeribudaya.ui.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home"/>

    <fragment
        android:id="@+id/browse_fragment"
        android:name="com.rizkirafiif.galeribudaya.ui.browse.BrowseFragment"
        android:label="fragment_browse"
        tools:layout="@layout/fragment_browse"/>

    <fragment
        android:id="@+id/about_fragment"
        android:name="com.rizkirafiif.galeribudaya.ui.about.AboutFragment"
        android:label="fragment_about"
        tools:layout="@layout/fragment_about"/>

    <fragment
        android:id="@+id/fragment_detail"
        android:name="com.rizkirafiif.galeribudaya.ui.detail.DetailFragment"
        android:label="fragment detail"
        tools:layout="@layout/fragment_detail">
        <argument
            android:name="receive"
            app:argType="int"/>
    </fragment>

    <fragment
        android:id="@+id/fragment_makanan"
        android:name="com.rizkirafiif.galeribudaya.ui.home.kategori.MakananFragment"
        android:label="fragment makanan"
        tools:layout="@layout/fragment_makanan">
        <action
            android:id="@+id/action_makanan_to_detail"
            app:destination="@id/fragment_detail"/>
    </fragment>

</navigation>